#!@bash@/bin/bash

browser=$(@xdg-utils@/bin/xdg-settings get default-web-browser)

case $browser in
google-chrome* | brave-browser* | microsoft-edge* | opera* | vivaldi* | helium*) ;;
*) browser="chromium.desktop" ;;
esac

# exec setsid uwsm-app -- $(sed -n 's/^Exec=\([^ ]*\).*/\1/p' {~/.local,~/.nix-profile,/usr}/share/applications/$browser 2>/dev/null | head -1) --app="$1" "${@:2}"

# TODO: this only works for chromium, and the above check is doing nothing
exec setsid @uwsm@/bin/uwsm-app -- @browser@ --app="$1" "${@:2}"
