#!@bash@/bin/bash

# Ensure elephant is running before launching walker
if ! pgrep -f .elephant-wrapped >/dev/null; then
  setsid @uwsm@/bin/uwsm-app -- elephant &
fi

# Ensure walker service is running
if ! pgrep -f "walker --gapplication-service" >/dev/null; then
  setsid uwsm-app -- @walker@/bin/walker --gapplication-service &
fi

exec @walker@/bin/walker --width 644 --maxheight 300 --minheight 300 "$@"
